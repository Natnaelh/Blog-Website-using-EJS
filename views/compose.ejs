<%- include('partials/header') -%>
<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" rows="1" cols="30" placeholder="Type here" autocomplete="off" />

    <label>Post</label>
    <textarea name="postContent" class="form-control" rows="5" cols="30"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="list" value="">Publish</button>

</form>


<%- include('partials/footer') -%>
